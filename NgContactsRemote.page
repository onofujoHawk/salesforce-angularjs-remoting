                                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No
                                </button>
                            </div>  
                        </div>
                    <!-- /.modal-content --> 
                    </div>
                <!-- /.modal-dialog --> 
                </div>

                <!-- Alert message -->
                <alert ng-repeat="alert in alerts" type="{{ alert.type }}" class="alert-fade" 
                close="closeAlert($index)">
